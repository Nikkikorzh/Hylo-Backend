# .env.example - пример (НЕ коммить реальные секреты)
# HTTP порт, на котором запускается Express
PORT=3000

# Время жизни кэша /api/apy в миллисекундах (по умолчанию 60s)
CACHE_TTL_MS=60000

# Puppeteer: путь до системного chromium/chrome в контейнере/сервере.
# Если не указывать, puppeteer попытается скачать свою версию при npm install (увеличит размер)
# В Docker обычно: /usr/bin/chromium или /usr/bin/google-chrome-stable
PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium

# Отключить автозагрузку Chromium при установке (используется при сборке Docker образа,
# когда ты устанавливаешь системный chromium отдельно)
PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=true

# Прокси (опционально): если нужно пропускать браузер через HTTP/SOCKS proxy
# Пример: http://user:pass@127.0.0.1:8080
#PROXY=

# Режим (development/production)
NODE_ENV=production

